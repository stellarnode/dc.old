<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.association :user %>
    <%= f.input :is_pinned %>
    <%= f.input :is_draft %>
    <%= f.input :comments_count %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save Post", class: "btn btn-lg btn-success" %>
  </div>
  <br>
<% end %>
